<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ferreteria.controllers.ProductDetailsDialogController" styleClass="dialog-root">

    <!-- Header -->
    <top>
        <VBox styleClass="dialog-header" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Detalles del Producto" styleClass="dialog-title"/>
            <Separator styleClass="dialog-separator"/>
        </VBox>
    </top>

    <!-- Contenido Principal -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="dialog-scroll">
            <VBox spacing="20" styleClass="dialog-content">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- Información Básica -->
                <VBox spacing="15" styleClass="info-section">
                    <Label text="Información Básica" styleClass="section-title"/>
                    <GridPane hgap="15" vgap="10">
                        <Label text="Código:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="codeLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="field-value"/>

                        <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="nameLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="field-value"/>

                        <Label text="Descripción:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="descriptionLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="field-value" wrapText="true" maxWidth="400"/>

                        <Label text="Categoría:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="categoryLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="field-value"/>

                        <Label text="Ubicación:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="locationLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="field-value"/>
                    </GridPane>
                </VBox>

                <!-- Información Financiera -->
                <VBox spacing="15" styleClass="info-section">
                    <Label text="Información Financiera" styleClass="section-title"/>
                    <GridPane hgap="15" vgap="10">
                        <Label text="Precio Venta:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="priceLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="field-value, price-value"/>

                        <Label text="Precio Costo:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="costLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="field-value, cost-value"/>

                        <Label text="Ganancia:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="profitLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="field-value, profit-value"/>
                    </GridPane>
                </VBox>

                <!-- Información de Inventario -->
                <VBox spacing="15" styleClass="info-section">
                    <Label text="Información de Inventario" styleClass="section-title"/>
                    <GridPane hgap="15" vgap="10">
                        <Label text="Stock Actual:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                        <HBox spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="1">
                            <Label fx:id="stockLabel" styleClass="field-value"/>
                            <Label fx:id="stockStatus" styleClass="stock-status"/>
                        </HBox>

                        <Label text="Stock Mínimo:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="minStockLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="field-value"/>
                    </GridPane>
                </VBox>

                <!-- Información del Sistema -->
                <VBox spacing="15" styleClass="info-section">
                    <Label text="Información del Sistema" styleClass="section-title"/>
                    <GridPane hgap="15" vgap="10">
                        <Label text="ID Producto:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="field-value"/>

                        <Label text="Estado:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="activeLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="field-value"/>

                        <Label text="Fecha Creación:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
                        <Label fx:id="createdAtLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="field-value"/>
                    </GridPane>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Botones -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="dialog-buttons">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Button mnemonicParsing="false" onAction="#handleClose" styleClass="action-button, primary" text="Cerrar" />
        </HBox>
    </bottom>

</BorderPane>
