<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ferreteria.controllers.ProductsController" styleClass="dashboard-root">

    <!-- Navbar Superior -->
    <top>
        <fx:include fx:id="navbar" source="components/Navbar.fxml"/>
    </top>

    <!-- Contenido Principal -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane">
            <VBox styleClass="main-content" spacing="20" minHeight="600">
                <padding>
                    <Insets top="24" right="24" bottom="24" left="24"/>
                </padding>

                <!-- Header de Pagina -->
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <VBox HBox.hgrow="ALWAYS" spacing="4">
                        <Label text="Gesti칩n de Productos" styleClass="page-title"/>
                        <Label text="Administra el inventario de productos de tu ferreter칤a" styleClass="page-subtitle"/>
                    </VBox>
                    <Label fx:id="dateLabel" styleClass="date-label"/>
                </HBox>

                <!-- Barra de b칰squeda y botones -->
                <VBox spacing="12">
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <TextField fx:id="searchField" prefWidth="300" promptText="Buscar por c칩digo, nombre, categor칤a..." styleClass="search-field" HBox.hgrow="ALWAYS"/>
                        <Button mnemonicParsing="false" onAction="#handleNewProduct" styleClass="action-button primary" text="+ Nuevo Producto" />
                        <Button mnemonicParsing="false" onAction="#handleRefresh" styleClass="action-button secondary" text="游댃 Recargar" />
                    </HBox>
                    
                    <!-- Filtro de categor칤as -->
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <Label text="Filtrar por categor칤a:" styleClass="filter-label"/>
                        <ComboBox fx:id="categoryFilter" prefWidth="180" promptText="Todas las categor칤as" styleClass="form-combo"/>
                        <Button mnemonicParsing="false" onAction="#handleFilterByCategory" styleClass="action-button" text="Filtrar"/>
                        <Button mnemonicParsing="false" onAction="#handleClearFilter" styleClass="action-button secondary" text="Limpiar"/>
                    </HBox>
                </VBox>

                <!-- Tabla de productos -->
                <TableView fx:id="productsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                    <columns>
                       <TableColumn fx:id="codeColumn" prefWidth="100" text="C칩digo" />
                       <TableColumn fx:id="nameColumn" prefWidth="250" text="Nombre" />
                       <TableColumn fx:id="categoryColumn" prefWidth="130" text="Categor칤a" />
                       <TableColumn fx:id="locationColumn" prefWidth="100" text="Ubicaci칩n" />
                       <TableColumn fx:id="priceColumn" prefWidth="100" text="Precio" />
                       <TableColumn fx:id="stockColumn" prefWidth="70" text="Stock" />
                       <TableColumn fx:id="actionsColumn" prefWidth="180" text="Acciones" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
