<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ferreteria.controllers.ReportsController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header">
         <children>
            <Button mnemonicParsing="false" onAction="#handleBack" styleClass="back-button" text="← Volver" />
            <Label styleClass="header-title" text="Reportes" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      
      <VBox spacing="15.0" styleClass="content-container">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         
         <!-- Filtros del Reporte -->
         <VBox spacing="10.0" styleClass="filter-section">
            <children>
               <Label styleClass="section-title" text="Configuración del Reporte" />
               <HBox alignment="CENTER_LEFT" spacing="15.0">
                  <children>
                     <VBox spacing="5.0">
                        <children>
                           <Label text="Tipo de Reporte:" />
                           <ComboBox fx:id="reportTypeComboBox" prefWidth="250.0" />
                        </children>
                     </VBox>
                     <VBox spacing="5.0">
                        <children>
                           <Label text="Fecha Inicio:" />
                           <DatePicker fx:id="startDatePicker" prefWidth="150.0" />
                        </children>
                     </VBox>
                     <VBox spacing="5.0">
                        <children>
                           <Label text="Fecha Fin:" />
                           <DatePicker fx:id="endDatePicker" prefWidth="150.0" />
                        </children>
                     </VBox>
                     <Button mnemonicParsing="false" onAction="#handleGenerateReport" styleClass="action-button, primary" text="Generar Reporte" />
                  </children>
               </HBox>
            </children>
         </VBox>
         
         <!-- Resumen -->
         <HBox alignment="CENTER_LEFT" spacing="30.0" styleClass="summary-section">
            <children>
               <Label fx:id="totalLabel" styleClass="summary-label" text="Total: $0.00" />
               <Label fx:id="countLabel" styleClass="summary-label" text="Registros: 0" />
               <Button mnemonicParsing="false" onAction="#handleExportReport" styleClass="action-button, success" text="Exportar Reporte" />
            </children>
            <padding>
               <Insets bottom="10.0" top="10.0" />
            </padding>
         </HBox>
         
         <!-- Tabla de Resultados -->
         <TableView fx:id="reportsTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Descripción" />
               <TableColumn fx:id="detailsColumn" prefWidth="300.0" text="Detalles" />
               <TableColumn fx:id="amountColumn" prefWidth="120.0" text="Monto" />
               <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Fecha" />
            </columns>
         </TableView>
         
      </VBox>
   </children>
</VBox>
