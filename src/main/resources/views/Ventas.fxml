<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ferreteria.controllers.VentasController"
            styleClass="dashboard-root">

    <!-- Navbar Superior -->
    <top>
        <HBox styleClass="navbar" alignment="CENTER_LEFT" spacing="12">
            <padding>
                <Insets top="0" right="32" bottom="0" left="32"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="ðŸ”§" styleClass="navbar-icon"/>
                <Label text="Ferreteria" styleClass="navbar-brand"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox alignment="CENTER" spacing="6">
                <Button text="Dashboard" onAction="#handleDashboard" styleClass="nav-button"/>
                <Button text="Productos" onAction="#handleProducts" styleClass="nav-button"/>
                <Button text="Ventas" styleClass="nav-button nav-button-active"/>
                <Button text="Reportes" onAction="#handleReports" styleClass="nav-button"/>
                <Button text="Usuarios" onAction="#handleUsers" styleClass="nav-button"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox alignment="CENTER_RIGHT" spacing="20">
                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="welcomeLabel" text="Usuario" styleClass="nav-user-name"/>
                    <Label fx:id="roleLabel" text="Rol" styleClass="nav-user-role"/>
                </VBox>
                <Button text="Cerrar Sesion" onAction="#handleLogout" styleClass="logout-btn"/>
            </HBox>
        </HBox>
    </top>

    <!-- Contenido Principal -->
    <center>
        <VBox styleClass="main-content" spacing="24">
            <padding>
                <Insets top="28" right="36" bottom="28" left="36"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox HBox.hgrow="ALWAYS" spacing="4">
                    <Label text="Gestion de Ventas" styleClass="page-title"/>
                    <Label text="Historial de ventas y punto de venta" styleClass="page-subtitle"/>
                </VBox>
                <Button text="+ Nueva Venta" onAction="#handleNuevaVenta" styleClass="login-button-glass"
                        prefHeight="44" minWidth="150"/>
            </HBox>

            <!-- Stats Cards -->
            <HBox spacing="20" alignment="CENTER">
                <VBox styleClass="stat-card card-green" HBox.hgrow="ALWAYS">
                    <Label text="ðŸ’µ" styleClass="card-icon"/>
                    <Label fx:id="ventasHoyLabel" text="0" styleClass="card-value"/>
                    <Label text="Ventas de Hoy" styleClass="card-label"/>
                </VBox>
                <VBox styleClass="stat-card card-blue" HBox.hgrow="ALWAYS">
                    <Label text="ðŸ“Š" styleClass="card-icon"/>
                    <Label fx:id="ventasMesLabel" text="0" styleClass="card-value"/>
                    <Label text="Ventas del Mes" styleClass="card-label"/>
                </VBox>
                <VBox styleClass="stat-card card-purple" HBox.hgrow="ALWAYS">
                    <Label text="ðŸ§¾" styleClass="card-icon"/>
                    <Label fx:id="cantidadHoyLabel" text="0" styleClass="card-value"/>
                    <Label text="Transacciones Hoy" styleClass="card-label"/>
                </VBox>
                <VBox styleClass="stat-card card-orange" HBox.hgrow="ALWAYS">
                    <Label text="ðŸ“ˆ" styleClass="card-icon"/>
                    <Label fx:id="promedioLabel" text="0" styleClass="card-value"/>
                    <Label text="Ticket Promedio" styleClass="card-label"/>
                </VBox>
            </HBox>

            <!-- Filtros -->
            <HBox spacing="16" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 16 20; -fx-border-color: #e2e8f0; -fx-border-radius: 12;">
                <Label text="Filtrar:" style="-fx-font-weight: bold;"/>
                <DatePicker fx:id="fechaDesde" promptText="Desde" prefWidth="140"/>
                <DatePicker fx:id="fechaHasta" promptText="Hasta" prefWidth="140"/>
                <ComboBox fx:id="statusFilter" promptText="Estado" prefWidth="140"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Buscar por producto..." prefWidth="200" onAction="#handleBuscarProducto"/>
                <Button text="Buscar" onAction="#handleFiltrar" styleClass="action-button"/>
                <Button text="Limpiar" onAction="#handleLimpiarFiltros" styleClass="action-button"/>
            </HBox>

            <!-- Tabla de Ventas -->
            <TableView fx:id="ventasTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 12;">
                <columns>
                    <TableColumn fx:id="colId" text="#" prefWidth="70"/>
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150"/>
                    <TableColumn fx:id="colProductos" text="Productos" prefWidth="200"/>
                    <TableColumn fx:id="colVendedor" text="Vendedor" prefWidth="130"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="110"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                    <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="150"/>
                </columns>
                <placeholder>
                    <Label text="No hay ventas para mostrar"/>
                </placeholder>
            </TableView>

            <!-- Paginacion -->
            <HBox alignment="CENTER" spacing="16">
                <Button fx:id="btnAnterior" text="Anterior" onAction="#handlePaginaAnterior" styleClass="action-button"/>
                <Label fx:id="paginaLabel" text="Pagina 1 de 1" style="-fx-font-weight: bold;"/>
                <Button fx:id="btnSiguiente" text="Siguiente" onAction="#handlePaginaSiguiente" styleClass="action-button"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
